    <script>
let idade = Number(prompt("Digite sua idade:"));
let preco = 100; // valor base

if (idade < 12) {
  preco *= 0.5; // 50% de desconto
  alert("CrianÃ§a - Valor com desconto: R$ " + preco.toFixed(2));
} else if (idade >= 60) {
  preco *= 0.7; // 30% de desconto
  alert("Idoso - Valor com desconto: R$ " + preco.toFixed(2));
} else {
  alert("Adulto - Valor: R$ " + preco.toFixed(2));
}

    </script>
    
