    <script>
let cotacaoDolar = Number(prompt("Digite a cotação atual do dólar (R$):"));
let valorDolar = Number(prompt("Digite o valor em dólares (US$):"));

let valorReal = cotacaoDolar * valorDolar;
alert("Valor em reais: R$ " + valorReal.toFixed(2));
    </script>
    
